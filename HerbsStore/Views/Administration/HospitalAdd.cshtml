@model HerbsStore.Libraries.HS.Services.HospitalServices.HospitalCrudVm
@{
    ViewData["Title"] = "HospitalAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container text-center" style="background-color: #f5f5f5; padding:30px">

    <br />
    <h2>Add New Hospital</h2>
    <br />


    <form class="container" method="post" asp-controller="Administration" asp-action="HospitalAdd" id="addForm" enctype="multipart/form-data">

        <div style="color:red;" asp-validation-summary="All"></div>
        <img id="ImagePlaceholder" src="~/images/default-image_100.png" height="100" /><br /><br />


        <div class="mt-4">
            <input type="file" name="files" id="ImageInput" class="custom-input-file custom-input-file--2" accept="image/*" />
            <label for="ImageInput">
                <i class="fa fa-upload"></i>
                <span id="fileNameId">Choose a file</span>
            </label>
        </div>




        <div class="form-group">

            <div class="row">
                <div class="col-md-6">
                    <label>Hospital Name</label>
                </div>

                <div class="col-md-5">
                    <input type="text" asp-for="HospitalName" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group">

            <div class="row">
                <div class="col-md-6">
                    <label>Hospital Address</label>
                </div>
                <div class="col-md-5">
                    <input type="text" asp-for="HospitalAddress" class="form-control">
                </div>
                
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    <label>Hospital Description</label>
                </div>
                <div class="col-md-5">
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
              
            </div>
        </div>

        <div class="form-group">

            <div class="row">
                <div class="col-md-6">
                    <label>Disease Name </label>
                </div>

                <div class="col-md-5">
                    <input type="text" asp-for="DiseaseName" class="form-control">
                </div>
            </div>
        </div>

     


        <button type="submit" style="margin: 15px" class=" btn btn-primary  text-center">Add New Hospital</button>
    </form>


</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                if (input.files[0].size > 3145728) {
                    $('#ImagePlaceholder').attr('src', '~/images/default-image_100.png');
                }
                else
                    $('#ImagePlaceholder').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#ImageInput").change(function () {
        readURL(this); //resolveUploadFields(true);
        if (this.files[0].size > 3145728) {
            alert("file size too big, please upload something less than 3 Mb");
            document.getElementById("ImageInput").value = "";
        }
    });




</script>