@model HerbsStore.Libraries.HS.Services.ProductServices.ProductCrudVm

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div class="">
            <div class="w3l_banner_nav_right_banner3">
                <h3>Best Deals For New Products<span class="blink_me"></span></h3>
            </div>
            <div class="agileinfo_single">
                <h5>@Model.ProductName</h5>
                <div class="col-md-5 agileinfo_single_left">
                    <img id="example" src="@Model.ImageUrl" alt=" " class="img-responsive" />
                </div>
                <div class="col-md-6 agileinfo_single_right">
                
                    <div class="w3agile_description">
                        <h4>Description :</h4>
                        <p>
                           @Model.ProductDescription
                           <br/>
                               @Html.DisplayFor(model => model.ProductFeature)
                           <br/>
                               @Html.DisplayFor(model => model.ProductType)
                           <br/>
                               @Html.DisplayFor(model => model.PrimaryCare)
                           <br/>
                               @Html.DisplayFor(model => model.SecoundaryCare)
                             <br/>
                               @Html.DisplayFor(model => model.ProductDiseases)
                          
                        </p>
                    </div>
                    <div class="snipcart-item block">
                        <div class="snipcart-thumb agileinfo_single_right_snipcart">
                            <h4>TL @Model.Price <span>TL @Model.OldPrice</span></h4>
                        </div>
                        <div class="snipcart-details agileinfo_single_right_details">
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">

                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="submit" name="submit" value="Add to cart" class="button btn btn-bg btn-block" />

                            </form>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>


